<div class="input-wrapper">
    <div><h2>Chef</h2></div>
    <div>
        <select name="chef">
        {% for chef in chefOptions %}
            <option
                placeholder="Selecione um chef" 
                value="{{chef.id}}"
                {% if recipe.chef_id == chef.id %}
                    selected="{{chef.name}}"
                {% endif %}
                >{{chef.name}}
            </option>
        {% endfor %}
        </select>
    </div>
</div>

<div class="input-wrapper" >
    <div><h2>Imagem da receita</h2></div>
    <div>
        <input 
            type="url" 
            name="image" 
            placeholder="http://"
            value="{{recipe.image}}"
        >
    </div>
</div>

<div class="input-wrapper" id="title">
    <div><h2>Nome da receita</h2></div>
    <div>
        <input 
            type="text" 
            name="title" 
            placeholder="Coloque o nome da receita."
            value="{{recipe.title}}"
        >
    </div>
</div>

<div class="input-wrapper" id="ingredients">
    <div><h2>Ingredientes</h2></div>
        {% if recipe %}
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input 
                        type="text" 
                        name="ingredients[]" 
                        value="{{ingredient}}"
                    >
                </div>
            {% endfor %}
            {% else %}
                <div class="ingredient">
                    <input 
                        type="text" 
                        name="ingredients[]"
                        placeholder="Coloque um ingrediente por campo."
                        value="{{recipe.ingredients}}"
                    >
                </div>    
        {% endif %}
</div>

<button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

<div class="input-wrapper" id="prepare">
    <div><h2>Modo de preparo</h2></div>
        {% if recipe %}
            {% for preparation in recipe.preparation %} 
                <div class="prepare">
                    <input
                        type="text" 
                        name="preparation[]" 
                        value="{{preparation}}"
                    >
                </div>
            {% endfor %}
        {% endif %}
        <div class="prepare">
            <input
                type="text" 
                name="preparation[]" 
                placeholder="Coloque uma instrução por campo."
            >
        </div>
</div>

<button type="button" class="add-prepare">Adicionar novo passo</button>

<div class="input-wrapper">
    <div><h2>Informações adicionais</h2></div>
    <div>
    <textarea 
        name="information"
        cols="30"
        rows="10"
        value="{{recipe.information}}"
    >{{recipe.information}}</textarea>
    </div>
</div>