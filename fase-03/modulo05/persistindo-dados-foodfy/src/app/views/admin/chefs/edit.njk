{% extends '../layout.njk' %}

{% block head %}

    <title>Edição - {{chef.name}}</title>

{% endblock %}

{% block content%}
    <section class="create-wrapper">
        <div class="upper-wrapper">
            <h1>Editando chef</h1>
            <form method="POST" action="/admin/chefs?_method=DELETE" id="form-delete">
                <input type="hidden" name="id" value={{chef.id}}>
   
                <button type="submit">Deletar</button>
            </form>

            <div>
                <form method="POST" action="/admin/chefs?_method=PUT" id="edit-button-margin">

                    <button type="submit">Salvar chef</button>
                    
                    <div id="edit-center">
                        {% include 'admin/chefs/fields.njk' %}
                    </div>

                    <input 
                        type="hidden" 
                        name="id" 
                        value={{chef.id}}
                    >
        
                </form>   
            </div>
        </div>
    </section>

    {% include 'confirm.njk' %}

{% endblock %}