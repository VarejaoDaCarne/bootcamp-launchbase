{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="/students/create">Novo</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Estudante</th>
                <th>Ano escolar</th>
                <th>Email </th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{student.avatar_url}})"></span>
                    {{student.name}}
                </td>
                <td>{{student.year}}</td>
                <td>{{student.email}}</td>
                <td><a href="/students/{{student.id}}">Ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
