<div class="input-wrapper" id="title">
    <div><h2>Nome da receita</h2></div>
    <div>
        <input 
            type="text" 
            name="title" 
            placeholder="Coloque o nome da receita."
            value="{{item.title}}"
        >
    </div>
</div>

<div class="input-wrapper" >
    <div><h2>Nome do autor</h2></div>
    <div>
        <input 
            type="text" 
            name="author" 
            placeholder="Coloque o nome do autor da receita."
            value="{{item.author}}"
        >
    </div>
</div>

<div class="input-wrapper" >
    <div><h2>Imagem da receita</h2></div>
    <div>
        <input 
            type="url" 
            name="image" 
            placeholder="http://"
            value="{{item.image}}"
        >
    </div>
</div>

<div class="input-wrapper" id="ingredients">
    <div><h2>Ingredientes</h2></div>
        {% if item %}
            {% for ingredient in item.ingredients %}
                <div class="ingredient">
                    <input 
                        type="text" 
                        name="ingredients[]" 
                        value="{{ingredient}}"
                    >
                </div>
            {% endfor %}
            {% else %}
                <div class="ingredient">
                    <input 
                        type="text" 
                        name="ingredients[]"
                        placeholder="Coloque um ingrediente por campo."
                        value="{{item.ingredients}}"
                    >
                </div>    
        {% endif %}
</div>

<button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

<div class="input-wrapper" id="prepare">
    <div><h2>Modo de preparo</h2></div>
        {% if item %}
            {% for preparation in item.preparation %} 
                <div class="prepare">
                    <input
                        type="text" 
                        name="preparation[]" 
                        value="{{preparation}}"
                    >
                </div>
            {% endfor %}
            {% else %}
                <div class="prepare">
                    <input
                        type="text" 
                        name="preparation[]" 
                        placeholder="Coloque uma instrução por campo."
                        value="{{item.preparation}}"
                    >
                </div>
        {% endif %}
</div>

<button type="button" class="add-prepare">Adicionar novo passo</button>

<div class="input-wrapper">
    <div><h2>Informações adicionais</h2></div>
    <div>
    <textarea 
        name="information"
        cols="30"
        rows="10"
        value="{{item.information}}"
    >{{item.information}}</textarea>
    </div>
</div>

<script src="/admin.js"></script>