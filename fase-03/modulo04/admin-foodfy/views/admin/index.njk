{% extends "./layout.njk" %}

{% block head %}
    <title>Receitas - Admin - Foodfy</title>
{% endblock %}

{% block content %}
    <section id="section-admin">
    <div><h1>Gerenciar Receitas</h1></div>
        <div class="receipts" id="receipts-admin">
            {% for item in items %}
                <article class="receipt" id="receipt-admin"> 
                    <div class="receipt__image-container" id="receipt__admin-container">

                        <img src="{{item.image}}" alt="Imagem de {{item.title}}"  id="receipt-img"  >
                    
                    </div>
                    <div class="receipt__content" id="receipt__content-admin">

                        <p class="receipt__content-receipt">{{item.title}}</p>
                        <p class="receipt__content-chef">por {{item.author}}</p>
                        <a href="/admin/{{item.id}}" class="receipt__content-see">Visualizar</a>

                    </div>
                    {% if item.recipeIndex %}
                    {% endif %}
                </article>
            {% endfor %}
        </div>
    </section>
{% endblock %}