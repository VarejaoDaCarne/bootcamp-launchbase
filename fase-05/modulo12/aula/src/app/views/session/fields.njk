<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email"
            name="email"
            value="{{user.email}}"
            placeholder="Digite seu email"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Digite sua senha."
        >
    </div>
</div>