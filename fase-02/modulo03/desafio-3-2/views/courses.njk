{% extends "layout.njk" %}
{% block head %}
<title>Cursos - Rocketseat</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}
{% block content %}
<section class="cards">
    {% for course in courses %}
    <div class="card" id="{{course.id}}">
        <div class="titulo-curso">
            <h1>{{course.title}}</h1>
        </div>
        <div class="card__image-container"> 
            <img src="https://skylab.rocketseat.com.br/static/{{course.img}}.svg" alt="Imagem de {{course.title}}">
        </div>
        <div class="card__content">
            <p>{{course.description}}</p>
        </div>
        <div class="card__info">
            <p >{{course.duration}}</p >
            <p class="card__price">{{course.price}}</p>
        </div>
    </div>
    {% endfor %}
</section>
<div class="modal-overlay">
    <div class="modal">
        <a class="close-modal">
            <i class="material-icons">close</i>
        </a>
        <a class="maximize">
            <i class="material-icons">maximize</i>
        </a>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>
<script src="/scripts.js"></script>
{% endblock %}