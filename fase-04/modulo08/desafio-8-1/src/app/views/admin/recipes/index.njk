{% extends "../layout.njk" %}

{% block head %}
    <title>Admin - Receitas</title>
{% endblock %}

{% block content %}
    <section id="section-admin">
        <div class="upper-wrapper" id="upper-wrapper-button">
            <h1>Gerenciar Receitas</h1>
            
            <a href="/admin/recipes/create" id="admin-create-button">Criar Receita</a>
        </div>
        <div class="receipts" id="receipts-admin">
            {% for recipe in recipes %}
                <article class="receipt" id="receipt-admin"> 
                    <div class="receipt__image-container" id="receipt__admin-container">
                        <img
                            {%for id in ids %}
                                {%if recipe.id === id.recipe_id %}
                                    {% for image in files%}
                                        {% if image.id === id.file_id %}
                                            src="{{image.src}}" 
                                            alt="{{image.name}}"
                                            {% elseif image.src == "" %}
                                            src="http://placehold.it/600x300?text=PRODUTO SEM FOTO"
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            {% endfor %}
                        >
                    </div>
                    <div class="receipt__content" id="receipt__content-admin">

                        <p class="receipt__content-receipt">{{recipe.title}}</p>
                        <p class="receipt__content-chef">por {{recipe.chef_name}}</p>
                        <a href="/admin/recipes/{{recipe.id}}" class="receipt__content-see">Visualizar</a>

                    </div>
                    {% if recipes.recipesIndex %}
                    {% endif %}
                </article>
            {% endfor %}
        </div>
        
    </section>

{% endblock %}