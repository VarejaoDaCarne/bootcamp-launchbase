<header class="header-foodfy">
    <div class="links">
        <a href="/" id="logo"><img src="https://raw.githubusercontent.com/Rocketseat/bootcamp-launchbase-desafios-02/master/layouts/assets/logo.png" alt="Foodfy logo"></a>
        <a href="/about">Sobre</a>
        <a href="/recipes">Receitas</a>   
        <a href="/chefs">Chefs</a>
        <a href="/login">Login</a>

        {% if not chefs %}
            {% block filter %}
                    <form action="/search" method="GET" class="filter-foodfy">
                        <input 
                            type="text" 
                            name="filter"
                            placeholder="Buscar uma receita"
                            value={{filter}}
                        >
                        <button type="submit">Buscar</button>
                    </form>
            {% endblock %}
        {% endif %}
    </div>
</header>