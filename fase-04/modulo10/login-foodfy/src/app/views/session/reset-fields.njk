<div class="input-wrapper">
    <div><h2>Email</h2></div>
    <div {% if error %}class="error"{% endif %}>
        <input 
            type="email" 
            name="email" 
            value="{{user.email}}"
            placeholder="Digite seu email"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="input-wrapper">
    <div><h2>Senha</h2></div>
    <div {% if error %}class="error"{% endif %}>
        <input 
            type="password" 
            name="password" 
            placeholder="Digite sua senha"
        >
    </div>
</div>

