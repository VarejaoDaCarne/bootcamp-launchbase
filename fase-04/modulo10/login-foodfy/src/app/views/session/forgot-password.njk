{% extends "layout-session.njk" %}

{% block head %}
    <title>Esqueceu senha - Foodfy</title>
{% endblock %}

{% block content %}
<section class="password container form">
    <form  method="POST" action="/forgot-password">
    
        <div>
            <h3>Esqueceu a senha?</h3>
        </div>

       <div class="fields">
            <div class="input-wrapper">
                <div><h2>Email</h2></div>
                <div {% if error %}class="error"{% endif %}>
                    <input 
                        type="email"
                        name="email"
                        value="{{user.email}}"
                        placeholder="Digite seu email para recuperar sua senha"
                        onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>
        </div>

        <button class="button" type="submit">Recuperar</button>
    </form>
</section>

{% endblock %}