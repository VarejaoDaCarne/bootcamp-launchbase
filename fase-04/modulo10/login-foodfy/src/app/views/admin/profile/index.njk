{% extends "../layout.njk" %}

{% block head %}
    <title>{{user.name}} - Admin Foodfy</title>
{% endblock %}

{% block content %}
    <section class="edit-wrapper" id="user-register-upper">
        <div class="edit-upper-wrapper" id="button-upper-profile">
            <h1>Bem Vindo {{user.name}}</h1>

            <form method="POST" action="/admin/profile?_method=PUT">
                <button type="submit" id="user-edit-button">Salvar</button>
        </div>

                {% include 'admin/profile/profile-fields.njk' %}
        
                <input 
                    type="hidden" 
                    name="id" 
                    value={{user.id}}
                >
            </form>   
    </section>

    {% include 'confirm.njk' %}
{% endblock %}