<div id="cards">
    <div class="input-wrapper" id="title">
        <div><h2>Nome</h2></div>
        <div>
            <input 
                type="text" 
                name="name" 
                placeholder="Digite o nome completo"
                value="{{user.name}}"
                required
            >
        </div>
    </div>

    <div class="input-wrapper">
        <div><h2>Email</h2></div>
        <div class="input">
            <input 
                type="email" 
                name="email" 
                value="{{user.email}}"
                placeholder="Digite o email"
                onblur="Validate.apply(this, 'isEmail')"
            >
        </div>
    </div>

    <div class="input-wrapper">
        <div class="input">
            <input 
                type="checkbox" 
                name="is_admin"
                {% if user.is_admin == true %}
                    checked
                {% endif %}
            ><label for="is_admin">Administrador</label>
        </div>
    </div>
</div>